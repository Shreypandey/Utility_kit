<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mp"
    tools:context="com.example.shukl.utilitykit.Media_player">
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mediaStop"
        android:layout_marginBottom="108dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/mediaPlay"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="460dp"
        android:enabled="true"
        android:background="@drawable/play" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/mediaPause"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="460dp"
        android:enabled="false"
        android:background="@drawable/pause" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/stop"
        android:id="@+id/mediaStop"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="16dp"/>
    <Button
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:id="@+id/mediaNext"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="453dp"
        android:enabled="true"
        android:text="Magical Player"
        android:textColor="#ffffff"/>



</RelativeLayout>
